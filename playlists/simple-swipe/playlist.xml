<?xml version="1.0" encoding="utf-8"?>
<ximpel>
    <playlist>
    
		<!-- 1st (initial) screen, swipe forward (left) (to screen 2), swipe backward (right) (to last screen 5) -->
   		<subject id="screen1" swipeLeftTo="screen2" swipeRightTo="screen5">
			<media>
				<!--background image-->
				<image src="media/test.jpg">
					<!-- title -->
					<overlay text="Screen 1 title" x="300px" y="100px" width="1350px" height="80px" />
					<!-- swipe indication -->
					<overlay text="← swipe to explore more content →" x="300px" y="935px" width="1350px" height="80px"  backgroundColor="purple" alpha="0.5" hoverAlpha="0.5" />
					<!-- buttons -->
					<overlay text="prev" shape="circle" x="50px" y="550px" radius="100px" backgroundColor="orange" leadsTo="screen5" />
					<overlay text="next" shape="circle" x="1720px" y="550px" radius="100px" backgroundColor="orange" leadsTo="screen2" />
				</image>
			</media>
		</subject>
		
